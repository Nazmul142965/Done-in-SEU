<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.notunproject.RegistrationController">
   <children>
      <Label layoutX="229.0" layoutY="37.0" text="Registration" underline="true">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" layoutX="214.0" layoutY="123.0" opacity="0.5" prefHeight="27.0" prefWidth="150.0" promptText="ex: Nazmul">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="emailField" layoutX="214.0" layoutY="187.0" opacity="0.5" promptText="ex: abc@edu.bd" />
      <Button layoutX="259.0" layoutY="307.0" mnemonicParsing="false" onAction="#registerEvent" text="Register" />
      <Label layoutX="212.0" layoutY="98.0" text="Name:" />
      <Label layoutX="214.0" layoutY="161.0" text="Email:" />
      <Label layoutX="214.0" layoutY="225.0" text="Password:" />
      <Label layoutX="236.0" layoutY="282.0" prefHeight="14.0" prefWidth="101.0" text="Give password carefully :)">
         <font>
            <Font size="9.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="213.0" layoutY="249.0" prefHeight="7.0" prefWidth="150.0" />
      <Label layoutX="255.0" layoutY="361.0" onMouseClicked="#goToLoginEvent" text="Login Here!" textFill="#0a07ed" underline="true">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="217.0" layoutY="343.0" text="Already have an account?:" />
   </children>
</AnchorPane>
